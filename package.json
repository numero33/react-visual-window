{
    "name": "react-visual-window",
    "version": "0.0.7",
    "author": "Patrick Malleier <github@numero33.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/numero33/react-visual-window/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/numero33/react-visual-window.git"
    },
    "keywords": [
        "react",
        "reactjs",
        "virtual",
        "window",
        "windowed",
        "list",
        "scrolling",
        "virtualized",
        "table"
    ],
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "test:coverage": "yarn run test --coverage",
        "coverage:report": "open coverage/lcov-report/index.html",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 1000,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": false,
        "jsxBracketSameLine": true,
        "arrowParens": "avoid",
        "endOfLine": "auto"
    },
    "module": "dist/react-visual-window.esm.js",
    "size-limit": [
        {
            "path": "dist/react-visual-window.cjs.production.min.js",
            "limit": "2 KB"
        },
        {
            "path": "dist/react-visual-window.esm.js",
            "limit": "2 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.0",
        "@testing-library/react": "^12.1.2",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "husky": "^7.0.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "size-limit": "^7.0.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.5.2"
    }
}
